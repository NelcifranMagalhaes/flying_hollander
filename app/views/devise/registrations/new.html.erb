<div class="ui middle aligned center aligned grid">

<div class="column">

  <h3 class = "animated bounceInUp">
    <strong>
      Cadastre um novo usuario
    </strong>
  </h3>

<div class="column">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "ui form"}) do |f| %>
  
  <div class="ui error message">
  	<%= f.error_notification  %>
  </div>


  <div class="ui stacked segment">

    <div class="field">
    	<div class="ui left icon input">
        <i class="user icon"></i>
    		<%= f.text_field :email, required: true, autofocus: true %>
    	</div>
	</div>

	<div class="field">
        <div class="ui left icon input">
            <i class="lock icon"></i>
    		<%= f.input :password, required: true ,:label => false%>
    	</div>
    </div>

    <div class="field">
        <div class="ui left icon input">
			<i class="lock icon"></i>

    		<%= f.input :password_confirmation, required: true ,:label => false%>
    	</div>
	</div>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" ,class:"ui primary basic button"%>
  </div>

<div class="ui divider"></div>

  <div class="column" align="center">

  <div class="ui button">
      <%= link_to "Log in", new_session_path(resource_name) %><br />

</div>

</div>

  
<% end %>
</div>
</div>
</div>



<style type="text/css">

    body > .grid {
      height: 100%;
    }

    .column {
      max-width: 450px;
    }
    

h2 {

  margin: calc(2rem - 1.143em ) 0em -4rem;
}

</style>