<div class="ui main text container">

<p id="notice"><%= notice %></p>

<h3>Store</h3>

<table  id="mod" class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cnpj</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.cnpj %></td>
        <td><%= store.user.email %></td>

        <td>
      <%= link_to store do%>
          <i class="unhide icon"></i>
            <% end %>
        </td>

        <td><%= link_to edit_store_path(store) do%>
          <i class="write square icon"></i>
          
          <% end %>
        </td>

        <td><%= link_to store, method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="ban icon"></i>
          
        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="ui divider"></div>

<%= link_to new_store_path, class: 'ui primary basic button' do %>
  <i class="small add icon"></i> 
  New Store
