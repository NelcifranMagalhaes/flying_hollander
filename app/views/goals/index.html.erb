

<div class="ui main text container">

<p id="notice"><%= notice %></p>

<h3>Goals</h3>

<table  id="mod" class="ui celled table">
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Month</th>
      <th>Sum value</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.start_date %></td>
        <td><%= goal.end_date %></td>
        <td><%= goal.month %></td>
        <td><%= goal.sum_value %></td>
    
        <td>
          <%= link_to goal do%>
            <i class="unhide icon"></i>
            <% end %>
        </td>

        <td><%= link_to edit_goal_path(goal) do%>
          <i class="write square icon"></i>
          
          <% end %>
        </td>

        <td><%= link_to goal, method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="ban icon"></i>
          
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="ui divider"></div>

<%= link_to new_goal_path, class: 'ui primary basic button' do %>
  <i class="small add icon"></i> 
  New Goal
<% end %>

</div>